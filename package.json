{
  "name": "@manu-raj/source",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "nx dev pitlane",
    "dev:pitlane": "nx dev pitlane",
    "dev:torque": "nx dev torque",
    "dev:showroom": "nx dev showroom",
    "dev:all": "nx run-many --target=dev --projects=pitlane,torque,showroom --parallel=3",
    "dev:apps": "nx run-many --target=dev --projects=pitlane,torque --parallel=2",
    "build": "node_modules/.bin/next build apps/pitlane",
    "build:pitlane": "node_modules/.bin/next build apps/pitlane",
    "build:torque": "node_modules/.bin/next build apps/torque",
    "build:showroom": "node_modules/.bin/next build apps/showroom",
    "build:all": "node_modules/.bin/next build apps/pitlane && node_modules/.bin/next build apps/torque && node_modules/.bin/next build apps/showroom",
    "start": "nx start pitlane",
    "start:torque": "nx start torque",
    "start:showroom": "nx start showroom",
    "lint": "nx lint",
    "lint:all": "nx run-many --target=lint --all",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "panda": "panda --cwd apps/pitlane",
    "panda:codegen": "panda codegen --cwd apps/pitlane",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:seed": "npx tsx scripts/seed.ts",
    "db:check": "npx tsx scripts/check-db.ts",
    "prepare": "panda codegen --cwd apps/pitlane"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "libs/*"
  ],
  "devDependencies": {
    "@nx/js": "22.4.4",
    "@nx/next": "^22.4.4",
    "@nx/react": "^22.4.4",
    "@pandacss/dev": "^1.8.1",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.6.0",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.19.7",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "nx": "22.4.4",
    "prettier": "~3.6.2",
    "tslib": "^2.3.0",
    "tsx": "^4.21.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.980.0",
    "@aws-sdk/s3-request-presigner": "^3.980.0",
    "bcryptjs": "^3.0.3",
    "mongoose": "^9.1.5",
    "next": "^16.1.6",
    "next-auth": "^5.0.0-beta.30",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  }
}
