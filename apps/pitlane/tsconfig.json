{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "noEmit": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "../..",
    "paths": {
      "@/*": ["apps/pitlane/*"],
      "@manuraj/domain": ["libs/domain/src/index.ts"],
      "@manuraj/data-access": ["libs/data-access/src/index.ts"],
      "@manuraj/auth": ["libs/auth/src/index.ts"],
      "@manuraj/auth/*": ["libs/auth/src/*"],
      "@manuraj/config": ["libs/config/src/index.ts"],
      "@pitkit": ["libs/pitkit/src/index.ts"],
      "@manuraj/pitkit": ["libs/pitkit/src/index.ts"],
      "@manuraj/ui": ["libs/pitkit/src/index.ts"],
      "@manuraj/ads": ["libs/ads/src/index.ts"],
      "@manuraj/shared-utils": ["libs/shared-utils/src/index.ts"]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "app/**/*.js",
    "app/**/*.jsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "../../libs/**/*.ts",
    "../../libs/**/*.tsx",
    "../../apps/pitlane/.next/types/**/*.ts",
    "../../dist/apps/pitlane/.next/types/**/*.ts",
    "next-env.d.ts"
  ],
  "exclude": [
    "out-tsc",
    "dist",
    "node_modules",
    "jest.config.ts",
    "jest.config.cts",
    "app/**/*.spec.ts",
    "app/**/*.test.ts",
    ".next"
  ]
}
